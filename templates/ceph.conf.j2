[global]
fsid = {{fsid}}
mon initial members = {{mon_hosts}}
mon host = {{mon_ips}}
auth cluster required = cephx
auth service required = cephx
auth client required = cephx
osd journal size = 1024
filestore xattr use omap = true
osd pool default size = 2
osd pool default min size = 1
osd pool default pg num = 20
osd pool default pgp num = 20
osd crush chooseleaf type = 1
#debug ms = 20
[mon]
  debug mon = 20
[osd]
  debug osd = 20
[rgw]
  debug rgw=20
{% for host in mons %}
[mon.{{host.hostname}}]
  host = {{host.hostname}}
  mon addr = {{host.ip}}
{% endfor %}
